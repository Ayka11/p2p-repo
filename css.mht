/* General Styles */
body {
 font-family: Arial, sans-serif;
 margin: 0;
 padding: 0;
}

a {
 color: #0077FF;
 text-decoration: none;
}

ul {
 list-style: none;
 margin: 0;
 padding: 0;
}

/* Header Styles */
header {
 background-color: #FFFFFF;
 box-shadow: 0 1px 2px rgba(0,0,0,0.1);
 display: flex;
 justify-content: space-between;
 padding: 1rem;
 position: fixed;
 top: 0;
 left: 0;
 right: 0;
 z-index: 1;
}

.logo {
 font-size: 1.5rem;
 font-weight: bold;
}

nav ul {
 display: flex;
}

nav li {
 margin-left: 1rem;
}

nav a:hover {
 text-decoration: underline;
}

